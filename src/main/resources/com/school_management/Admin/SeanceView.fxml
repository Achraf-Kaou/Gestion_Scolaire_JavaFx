<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.admin.SeanceController"
      spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestion des séances" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="15"/>
            <ColumnConstraints percentWidth="35"/>
            <ColumnConstraints percentWidth="15"/>
            <ColumnConstraints percentWidth="35"/>
        </columnConstraints>
        
        <Label text="Jour:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="cbJour" promptText="Sélectionner un jour" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"/>
        
        <Label text="Heure Début:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="txtHeureDebut" promptText="Ex: 08:00" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        
        <Label text="Heure Fin:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtHeureFin" promptText="Ex: 10:00" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Salle:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="txtSalle" promptText="Ex: A101" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        
        <Label text="Matière:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cbMatiere" promptText="Sélectionner une matière" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity"/>
        
        <Label text="Enseignant:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cbEnseignant" promptText="Sélectionner un enseignant" GridPane.columnIndex="3" GridPane.rowIndex="2" maxWidth="Infinity"/>
        
        <Label text="Emploi du Temps:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="cbEmploiDuTemps" promptText="Sélectionner un emploi du temps" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3" maxWidth="Infinity"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Ajouter" fx:id="btnAjouter"/>
        <Button text="Modifier" fx:id="btnModifier"/>
        <Button text="Supprimer" fx:id="btnSupprimer"/>
    </HBox>

    <TableView fx:id="table" prefHeight="350" style="-fx-background-color: #f6f6f6;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colJour" text="Jour" prefWidth="100"/>
            <TableColumn fx:id="colHeureDebut" text="Début" prefWidth="80"/>
            <TableColumn fx:id="colHeureFin" text="Fin" prefWidth="80"/>
            <TableColumn fx:id="colSalle" text="Salle" prefWidth="80"/>
            <TableColumn fx:id="colMatiere" text="Matière" prefWidth="150"/>
            <TableColumn fx:id="colEnseignant" text="Enseignant" prefWidth="150"/>
            <TableColumn fx:id="colEmploiDuTemps" text="Classe" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
