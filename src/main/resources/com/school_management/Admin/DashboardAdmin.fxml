<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.admin.DashboardAdminController" prefWidth="800" prefHeight="600" stylesheets="@../styles/common.css">
    <top>
        <HBox spacing="10" styleClass="admin-header">
            <Label text="Dashboard Admin" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Button text="Déconnexion" fx:id="btnLogout" styleClass="button-danger" />
        </HBox>
    </top>
    <left>
        <VBox spacing="15" styleClass="admin-sidebar" prefWidth="200">
            <Button text="Gestion specialites" fx:id="btnGestionSpecialites" maxWidth="Infinity" />
            <Button text="Gestion matieres" fx:id="btnGestionMatieres" maxWidth="Infinity" />
            <Button text="Gestion Etudiants" fx:id="btnGestionEtudiants" maxWidth="Infinity" />
            <Button text="Gestion Enseignants" fx:id="btnGestionEnseignants" maxWidth="Infinity" />
            <Button text="Gestion Classes" fx:id="btnGestionClasses" maxWidth="Infinity" />
            <Button text="Gestion Emploi du Temps" fx:id="btnGestionEmploiDuTemps" maxWidth="Infinity" />
            <Button text="Gestion Séances" fx:id="btnGestionSeances" maxWidth="Infinity" />
            <Button text="Statistiques" fx:id="btnStatistiques" maxWidth="Infinity" />
        </VBox>
    </left>
    <center>
        <VBox fx:id="contentArea" spacing="10">
            <Label text="Bienvenue dans le tableau de bord administrateur" />
            <!-- Zone de contenu dynamique -->
        </VBox>
    </center>
</BorderPane>
