<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.admin.ScheduleDisplayController"
      spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Affichage de l'Emploi du Temps" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Sélectionner un emploi du temps:"/>
        <ComboBox fx:id="cbEmploiDuTemps" promptText="Choisir une classe..." prefWidth="400"/>
    </HBox>

    <Label fx:id="lblTitle" text="Aucun emploi du temps sélectionné" 
           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

    <Separator/>

    <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" 
                style="-fx-background-color: transparent;">
        <GridPane fx:id="scheduleGrid" 
                  style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2;">
        </GridPane>
    </ScrollPane>

    <Label text="Astuce: Pour ajouter ou modifier des séances, utilisez le menu 'Gestion Séances'" 
           style="-fx-font-style: italic; -fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
</VBox>
