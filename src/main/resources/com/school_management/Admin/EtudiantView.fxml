<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.admin.EtudiantController"
      spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestion des étudiants" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>
        
        <Label text="Numéro Étudiant:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNumeroEtudiant" promptText="N° Étudiant" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtNom" promptText="Nom" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Prénom:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="txtPrenom" promptText="Prénom" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtEmail" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Téléphone:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="txtTelephone" promptText="Téléphone" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        
        <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtAdresse" promptText="Adresse" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3"/>
        
        <Label text="Date de naissance:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <DatePicker fx:id="dpBirthDate" promptText="Date de naissance" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="Date d'inscription:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <DatePicker fx:id="dpDateInscription" promptText="Date d'inscription" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
        
        <Label text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <PasswordField fx:id="txtPassword" promptText="Mot de passe" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="Classe:" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
        <ComboBox fx:id="cbClasse" promptText="Sélectionner une classe" GridPane.columnIndex="3" GridPane.rowIndex="5" maxWidth="Infinity"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Ajouter" fx:id="btnAjouter"/>
        <Button text="Modifier" fx:id="btnModifier"/>
        <Button text="Supprimer" fx:id="btnSupprimer"/>
    </HBox>

    <TableView fx:id="table" prefHeight="300" style="-fx-background-color: #f6f6f6;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNumero" text="N° Étudiant" prefWidth="100"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="120"/>
            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="120"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
            <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="100"/>
            <TableColumn fx:id="colClasse" text="Classe" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
