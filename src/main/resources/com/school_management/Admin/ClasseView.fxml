<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.admin.ClasseController"
      spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestion des classes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Rechercher:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtSearch" promptText="Rechercher par code ou nom de classe..." prefWidth="400"/>
    </HBox>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>
        
        <Label text="Code:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtCode" promptText="Code classe" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Nom:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNom" promptText="Nom classe" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        
        <Label text="Capacité Max:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtCapaciteMax" promptText="Ex: 30" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Année Scolaire:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="txtAnneeScolaire" promptText="Ex: 2024-2025" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        
        <Label text="Type Diplôme:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cbTypeDiplome" promptText="Sélectionner type" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity"/>
        
        <Label text="Niveau Année:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cbNiveauAnnee" promptText="Sélectionner niveau" GridPane.columnIndex="3" GridPane.rowIndex="2" maxWidth="Infinity"/>
        
        <Label text="Spécialité:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="cbSpecialite" promptText="Sélectionner spécialité" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3" maxWidth="Infinity"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Ajouter" fx:id="btnAjouter"/>
        <Button text="Modifier" fx:id="btnModifier"/>
        <Button text="Supprimer" fx:id="btnSupprimer"/>
    </HBox>

    <TableView fx:id="table" prefHeight="300" style="-fx-background-color: #f6f6f6;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colCode" text="Code" prefWidth="80"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="120"/>
            <TableColumn fx:id="colCapaciteMax" text="Capacité" prefWidth="80"/>
            <TableColumn fx:id="colAnneeScolaire" text="Année" prefWidth="100"/>
            <TableColumn fx:id="colTypeDiplome" text="Diplôme" prefWidth="100"/>
            <TableColumn fx:id="colNiveauAnnee" text="Niveau" prefWidth="100"/>
            <TableColumn fx:id="colSpecialite" text="Spécialité" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
