<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.etudiant.EtudiantProfileController" spacing="15" style="-fx-padding: 20;">
    <Label text="Mon Profil" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #16A085;" />
    <Separator />
    
    <GridPane hgap="15" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="150" />
            <ColumnConstraints minWidth="250" />
        </columnConstraints>
        
        <Label text="Numéro Étudiant:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="numeroLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Nom:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Prénom:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="prenomField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Email:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Téléphone:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="telephoneField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        
        <Label text="Adresse:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="adresseField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        
        <Label text="Classe:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <Label fx:id="classeLabel" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        
        <Label text="Date de naissance:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <Label fx:id="birthDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        
        <Label text="Date d'inscription:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <Label fx:id="dateInscriptionLabel" GridPane.columnIndex="1" GridPane.rowIndex="8" />
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="btnEdit" text="Modifier" />
        <Button fx:id="btnSave" text="Enregistrer" visible="false" />
        <Button fx:id="btnCancel" text="Annuler" visible="false" />
    </HBox>
</VBox>
