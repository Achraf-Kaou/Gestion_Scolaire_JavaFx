<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.enseignant.ScheduleController" spacing="15" style="-fx-padding: 20;">
    <Label text="Mon Emploi du Temps" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
    
    <Label fx:id="lblInfo" text="" 
           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
    
    <Separator />
    
    <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" 
                style="-fx-background-color: transparent;">
        <GridPane fx:id="scheduleGrid" 
                  style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2;">
        </GridPane>
    </ScrollPane>
</VBox>
