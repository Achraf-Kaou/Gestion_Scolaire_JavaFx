<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.enseignant.DashboardEnseignantController" prefWidth="900" prefHeight="700" stylesheets="@../styles/common.css">
    <top>
        <HBox spacing="10" styleClass="teacher-header">
            <Label fx:id="welcomeLabel" text="Dashboard Enseignant" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Déconnexion" fx:id="btnLogout" styleClass="button-danger" />
        </HBox>
    </top>
    <left>
        <VBox spacing="15" styleClass="teacher-sidebar" prefWidth="200">
            <Button text="Mon Profil" fx:id="btnProfile" maxWidth="Infinity" />
            <Button text="Mon Emploi du Temps" fx:id="btnSchedule" maxWidth="Infinity" />
            <Button text="Mes Étudiants" fx:id="btnStudents" maxWidth="Infinity" />
        </VBox>
    </left>
    <center>
        <VBox fx:id="contentArea" spacing="10" style="-fx-padding: 20;">
            <Label text="Bienvenue dans votre espace enseignant" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <!-- Zone de contenu dynamique -->
        </VBox>
    </center>
</BorderPane>
