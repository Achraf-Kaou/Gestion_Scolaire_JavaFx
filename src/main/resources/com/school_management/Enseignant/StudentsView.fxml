<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.enseignant.StudentsController" spacing="15" style="-fx-padding: 20;">
    <Label text="Mes Étudiants" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
    <Separator />
    
    <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="numeroColumn" text="N° Étudiant" prefWidth="120" />
            <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150" />
            <TableColumn fx:id="prenomColumn" text="Prénom" prefWidth="150" />
            <TableColumn fx:id="classeColumn" text="Classe" prefWidth="120" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" />
            <TableColumn fx:id="telephoneColumn" text="Téléphone" prefWidth="120" />
        </columns>
    </TableView>
</VBox>
