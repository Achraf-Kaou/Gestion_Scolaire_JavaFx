<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_management.controller.enseignant.ProfileController" spacing="15" style="-fx-padding: 20;">
    <Label text="Mon Profil" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
    <Separator />
    
    <GridPane hgap="15" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="150" />
            <ColumnConstraints minWidth="250" />
        </columnConstraints>
        
        <Label text="Numéro Enseignant:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="numeroLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Nom:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="nomLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Prénom:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="prenomLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Email:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Téléphone:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label fx:id="telephoneLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        
        <Label text="Adresse:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Label fx:id="adresseLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        
        <Label text="Spécialité:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <Label fx:id="specialiteLabel" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        
        <Label text="Grade:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <Label fx:id="gradeLabel" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        
        <Label text="Date de Recrutement:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <Label fx:id="dateRecrutementLabel" GridPane.columnIndex="1" GridPane.rowIndex="8" />
    </GridPane>
</VBox>
